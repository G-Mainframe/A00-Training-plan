import javafx.application.*;
import javafx.stage.*;
import javafx.scene.*;
import javafx.scene.control.*;
import javafx.scene.layout.*;
import javafx.scene.input.*;
import javafx.event.*;

public class Sample5 extends Application
{
   private Label lb;

   public static void main(String[] args)
   {
      launch(args);
   }
   public void start(Stage stage)throws Exception
   {
      //Rg[
      lb = new Label("COBOL准备就绪");

      //yC
      BorderPane bp = new BorderPane();

      //yC
      bp.setTop(lb);

      //V[
      Scene sc = new Scene(bp, 300, 200);

      //Cxgnho^
      sc.addEventHandler(MouseEvent.MOUSE_CLICKED, new SampleEventHandler());

      //Xe[W
      stage.setScene(sc);

      //Xe[W\
      stage.setTitle("Tv");
      stage.show();
   }

   //CxgnhNX
   class SampleEventHandler implements EventHandler<MouseEvent>
   {
      public void handle(MouseEvent e)
      {
         lb.setText("COBOL战胜Java");
      }
   }
}
